<%= render :partial=>"left_menu" %>
	<div class="span9">
          <div class="hero-unit">
            <% if @task %>
            <h1><%= @task.name %></h1>
			<p>Deadline is <strong><%#= @task_main.deadline.strftime("%d/%m/%Y") %></strong></p>

			 <%= simple_form_for @task, :url => '/tasks/update', :html => { :class => 'well' } do |f| %>
				<%= f.submit 'Check as done', :class=>'btn btn-success btn-large' %>
				<%= f.submit 'Edit', :class=>'btn btn-warning btn-large' %>
				<%= f.submit 'Cancel task', :class=>'btn btn-danger btn-large' %>
			<% end %>

			<% else %>
			<h1>I've not any tasks!</h1>
			<% end %>
          </div>

		<p><h1>Other tasks</h1></p>
		<hr />
		
		<div class="row-fluid">
			<% @tasks.each_with_index do |task, index| %>
		        <div class="span4">
		          <h2><%= task.name %></h2>
		          <p><%= task.text %></p>
		          <p><a class="btn" href="#">View details &raquo;</a></p>
		        </div>
			<% if (index+1)%3==0 %>
				</div><div class='row-fluid'>
			<% end %>
			<% end %>
		</div>

		<%= will_paginate(@tasks) %>


        </div><!--/span-->
      </div><!--/row-->
